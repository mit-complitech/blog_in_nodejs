<%- include('./partials/header'); -%>

	<h1>
		<%= post.title %>
	</h1>
	<div class="mb-5 row g-3">
		<div class="col-md-2">
			<form method="get" action="/posts/<%= post.slug %>/edit">
				<button type="submit" class="btn btn-primary mt-5 mb-10">Edit</button>
			</form>
		</div>
		<div class="col-md-10 mb-10">
			<form method="post" action="/posts/<%= post.slug %>/delete">
				<button type="submit" class="btn btn-danger mt-5 mb-10">Delete</button>
			</form>
		</div>
	</div>
	<div class="row g-3 mt-5">
		<p class="mt-5">
			<%= post.body %>
		</p>
	</div>

	<%- include('./partials/footer'); -%>